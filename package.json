{
  "name": "trep-tracker",
  "version": "1.6.1-beta",
  "type": "module",
  "license": "GPL-3.0",
  "main": "./electron-make-app.js",
  "author": {
    "name": "Lorenzo Tresoldi LTres",
    "email": "lorenzo.tres@gmail.com"
  },
  "description": "A PM-Oriented task tracker",
  "scripts": {
    "ng": "ng",
    "build-github-pages": "ng build --configuration github-pages",
    "start": "electron-forge start",
    "dev": "ng serve --configuration development",
    "build": "ng build --configuration electrified-prod",
    "watch": "ng build --watch --configuration development",
    "electron": "concurrently \"ng serve --configuration electrified-dev\" \"wait-on http://localhost:4200 && electron ./electron-development-app.js\"",
    "electron-forge-test": "ng build && electron ./electron-make-app.js\"",
    "package": "electron-forge package",
    "make": "npm run build && electron-forge make",
    "publish": "electron-forge publish",
    "lint": "npx eslint ./src --fix",
    "test": "start-server-and-test 'ng serve' http://localhost:4200 'npx playwright test'",
    "test-gui": "start-server-and-test 'ng serve' http://localhost:4200 'npx playwright test --ui'",
    "prepare": "husky",
    "link-picker": "npm link @ltres/angular-datetime-picker"
  },
  "productName": "trep-tracker",
  "engines": {
    "node": ">=22.5.1"
  },
  "dependencies": {
    "@angular/animations": "^18.1.3",
    "@angular/common": "^18.1.3",
    "@angular/compiler": "^18.1.3",
    "@angular/core": "^18.1.3",
    "@angular/forms": "^18.1.3",
    "@angular/platform-browser": "^18.1.3",
    "@angular/platform-browser-dynamic": "^18.1.3",
    "@angular/router": "^18.1.3",
    "@ltres/angular-datetime-picker": "^18.2.0",
    "@types/dhtmlxgantt": "^6.0.9",
    "dhtmlx-gantt": "^8.0.9",
    "electron-context-menu": "^4.0.1",
    "electron-squirrel-startup": "^1.0.1",
    "rxjs": "~7.8.1",
    "tslib": "^2.6.3",
    "uuid": "^10.0.0",
    "zone.js": "~0.14.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.1.3",
    "@angular/cli": "^18.1.3",
    "@angular/compiler-cli": "^18.1.3",
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron-forge/publisher-github": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.8.0",
    "@playwright/test": "^1.45.3",
    "@types/node": "^22.1.0",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "electron": "^31.3.1",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^9.8.0",
    "globals": "^15.9.0",
    "husky": "^9.1.4",
    "start-server-and-test": "^2.0.5",
    "typescript": "~5.5.4",
    "typescript-eslint": "^8.0.0",
    "wait-on": "^7.2.0"
  }
}