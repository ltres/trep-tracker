{
  "name": "trep-tracker",
  "version": "1.3.0-alpha",
  "type": "module",
  "license": "MIT",
  "main": "./electron-make-app.js",
  "author": {
    "name": "Lorenzo Tresoldi LTres",
    "email": "lorenzo.tres@gmail.com"
  },
  "description": "A PM-Oriented task tracker",
  "scripts": {
    "ng": "ng",
    "build-github-pages": "ng build --configuration github-pages",
    "start": "electron-forge start",
    "dev": "ng serve --configuration development",
    "build": "ng build --configuration electrified-prod",
    "watch": "ng build --watch --configuration development",
    "electron": "concurrently \"ng serve --configuration electrified-dev\" \"wait-on http://localhost:4200 && electron ./electron-development-app.js\"",
    "electron-forge-test": "ng build && electron ./electron-make-app.js\"",
    "package": "electron-forge package",
    "make": "npm run build && electron-forge make",
    "publish": "electron-forge publish",
    "lint": "npx eslint ./src --fix",
    "test": "npx playwright test",
    "test-gui": "npx playwright test --ui",
    "prepare": "husky"
  },
  "productName": "trep-tracker",
  "engines": {
    "node": ">=22"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.0",
    "@angular/common": "^17.3.0",
    "@angular/compiler": "^17.3.0",
    "@angular/core": "^17.3.0",
    "@angular/forms": "^17.3.0",
    "@angular/platform-browser": "^17.3.0",
    "@angular/platform-browser-dynamic": "^17.3.0",
    "@angular/router": "^17.3.0",
    "@types/dhtmlxgantt": "^6.0.9",
    "@types/frappe-gantt": "^0.6.4",
    "dhtmlx-gantt": "^8.0.9",
    "electron-context-menu": "^4.0.0",
    "electron-squirrel-startup": "^1.0.1",
    "marked": "^12.0.2",
    "ng2-date-picker": "^17.0.0",
    "ngx-markdown": "^17.2.1",
    "openai": "^4.52.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uuid": "^9.0.1",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.8",
    "@angular/cli": "^17.3.8",
    "@angular/compiler-cli": "^17.3.0",
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron-forge/publisher-github": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.8.0",
    "@playwright/test": "^1.45.3",
    "@types/node": "^22.0.2",
    "@types/uuid": "^9.0.8",
    "concurrently": "^8.2.2",
    "electron": "^31.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^9.8.0",
    "globals": "^15.8.0",
    "husky": "^9.1.4",
    "start-server-and-test": "^2.0.5",
    "typescript": "~5.4.2",
    "typescript-eslint": "^8.0.0",
    "wait-on": "^7.2.0"
  }
}