{
  "name": "trep-tracker",
  "version": "0.1.0-beta",
  "type": "module",
  "main": "./electron-make-app.js",
  "author": {
    "name": "Lorenzo Tres",
    "email": "lorenzo.tres@gmail.com"
  },
  "description": "A PM-Oriented task tracker",
  "scripts": {
    "ng": "ng",
    "start": "electron-forge start",
    "build": "ng build --configuration electrified",
    "watch": "ng build --watch --configuration development",
    "electron": "concurrently \"ng serve\" \"wait-on http://localhost:4200 && electron ./electron-development-app.js\"",
    "electron-forge-test": "ng build && electron ./electron-make-app.js\"",
    "package": "electron-forge package",
    "make": "ng build && electron-forge make"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.0",
    "@angular/common": "^17.3.0",
    "@angular/compiler": "^17.3.0",
    "@angular/core": "^17.3.0",
    "@angular/forms": "^17.3.0",
    "@angular/platform-browser": "^17.3.0",
    "@angular/platform-browser-dynamic": "^17.3.0",
    "@angular/router": "^17.3.0",
    "electron-context-menu": "^4.0.0",
    "electron-squirrel-startup": "^1.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uuid": "^9.0.1",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.8",
    "@angular/cli": "^17.3.8",
    "@angular/compiler-cli": "^17.3.0",
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@types/uuid": "^9.0.8",
    "concurrently": "^8.2.2",
    "electron": "^31.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "typescript": "~5.4.2",
    "wait-on": "^7.2.0"
  }
}
